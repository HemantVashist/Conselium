<% include ../partials/header %>

<div class = "container">
		<form action = "/institute/<%=inst._id%>?_method=PUT" method = "POST">
					<div class="form-group">
						<input class="form-control" type="text" name="inst[instName]" placeholder="inst name" value="<%=inst.firstName%>" autocomplete="off" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="url" name="inst[location]"  value="<%=inst.location%>" required>
					</div>
					<div class = "dropdown">
						<select name="inst[instType]" id="instType">
							<option value="Institute">College/University</option>
							<option value="School">School</option>
							<option value="Commercial">Commercial</option>
						</select>
					</div>
					<div class="form-group">
						<button class="btn btn-default btn-lg btn-block">Update</button>
					</div>
					
		</form>

</div>	


<% include ../partials/footer %>
