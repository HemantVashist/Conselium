<% include ../partials/header %>

<h1 style="text-align: center;">Edit Institute Details</h1><br>
<div class="row">
<div class = "container">
		<div style="width: 30%; margin: 3px auto;">
		<form action = "/institute/<%=inst._id%>?_method=PUT" method = "POST">
					<div class="form-group">
						<input class="form-control" type="text" name="inst[instName]" placeholder="inst name" value="<%=inst.firstName%>" autocomplete="off" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="inst[location]"  value="<%=inst.location%>" required>
					</div>
					<div class = "form-group">
						<select class="form-control" name="inst[instType]" id="instType">
							<option value="College/Institute">College/University</option>
							<option value="School">School</option>
							<option value="Commercial">Commercial</option>
						</select>
					</div>
					<div class="form-group">
						<button class="btn btn-dark btn-lg btn-block">Update</button>
					</div>
		</form>
		</div>
	</div>
</div>	


<% include ../partials/footer %>
